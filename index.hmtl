<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plug Oware</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="game-board">
        <div class="player1-pits">
            <div class="pit" id="pit-0"></div>
            <div class="pit" id="pit-1"></div>
            <div class="pit" id="pit-2"></div>
            <div class="pit" id="pit-3"></div>
            <div class="pit" id="pit-4"></div>
            <div class="pit" id="pit-5"></div>
        </div>
        <div class="player2-pits">
            <div class="pit" id="pit-6"></div>
            <div class="pit" id="pit-7"></div>
            <div class="pit" id="pit-8"></div>
            <div class="pit" id="pit-9"></div>
            <div class="pit" id="pit-10"></div>
            <div class="pit" id="pit-11"></div>
        </div>
        <div class="score">
            <p>Player 1 Score: <span id="player1-score">0</span></p>
            <p>Player 2 Score: <span id="player2-score">0</span></p>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>
